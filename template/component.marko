<!DOCTYPE html>
<html>
<head>
    <head>
        <meta charset="utf-8">
        <title>Events Page</title>
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0">
        <link rel="stylesheet" type="text/css" href="../${data.compName}/style/style.scss">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    </head>
<body>
<div class="container" id='content'>
    <h3 if="data.isServer === 'true'">Server Side</h3>
    <h3 else>Client Side</h3>
    <ssi data-component-url="components/${data.compName}"
         data-component-name="${data.compName}"
         data-content-model="/_content/${data.compName}"
         data-render-path="${data.isServer ? data.compName + '_server' : data.compName + '_client'}"
         isServer="${data.isServer}">
    </ssi>

    <div class="row col-md-12">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">README.md</div>
                <div class="panel-body">
                    Panel content
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Test Suits</div>
                <div class="panel-body">
                    Panel content
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">Mock Data</div>
            <div class="panel-body"
                 id="editor"
                 style="height:500px">

            </div>
        </div>
    </div>
</div>

<script src="https://ace.c9.io/build/src/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/javascript");
    editor.getSession().setUseWrapMode(true);
    editor.setValue(JSON.stringify(${data.mock}, null, '\t'))
</script>

</body>
</html>
